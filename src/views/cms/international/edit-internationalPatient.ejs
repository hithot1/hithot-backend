    <script>

        const appendTreatmentHTML = `
        <div class="form-group row new-gallery">

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">International Patient Title
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="treatmentTitle" placeholder="Enter treatment title..." required>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Treatment Icon
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <div class="custom-file">
                        <input name="treatmentIcon" type="file" class="custom-file-input" required>
                        <label class="custom-file-label">Choose Image file</label>
                        <label>Recommended Size 51 * 50</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Treatment Icon Alt
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="treatmentIconAlt" placeholder="Enter treatment icon alt..." required>
                </div>
            </div>
            
            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Treatment Description
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <textarea class="form-control" rows="4" id="comment" name="treatmentDescription"></textarea>
                </div>
            </div>
            
            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Treatment Link Name
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="treatmentLinkName" placeholder="Treatment link name..." required>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Treatment Link URL
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="treatmentLinkURL" placeholder="Treatment link URL..." required>
                </div>
            </div>

        <div class="col-lg-2 mt--35">
            <button class="btn btn-danger remove-row-treatment" type="button"><i class="fa fa-minus"></i></button>
            <button class="btn btn-primary add-row-treatment" type="button"><i class="fa fa-plus"></i></button>
        </div>
        </div>`;

        $(document).on('click', '.add-row-treatment', function() {
            $('.customize_section-treatment').append(appendTreatmentHTML);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove-row-treatment', function() {
            $(this).parents('.new-gallery').remove();
        });

        let delete_treatment_rows = [];

        $(document).on('click', '.remove_treatment_row', function() {
            delete_treatment_rows.push($(this).data('id'));
            $(this).parents('.previous-treatment-row').remove();
        });
        
        $(document).ready(function() {

            $('.select-tag-hospitalnames').val(<%- JSON.stringify(data.hospitalNames)%>).trigger('change');
            $('.select-tag-doctornames').val(<%- JSON.stringify(data.doctorNames)%>).trigger('change');
            $('.select-tag-patientStories').val(<%- JSON.stringify(data.patientStories)%>).trigger('change');
            $('.select-tag-patientReviews').val(<%- JSON.stringify(data.patientReviews)%>).trigger('change');
            $('.select-tag-specialities').val(<%- JSON.stringify(data.specialities)%>).trigger('change');
            $('.select-tag-doctorBytes').val(<%- JSON.stringify(data.doctorBytes)%>).trigger('change');
            $('.select-tag-faqs').val(<%- JSON.stringify(data.faqs)%>).trigger('change');
            $('.select-tag-insurances').val(<%- JSON.stringify(data.insurances)%>).trigger('change');

        });
        $(document).on('click', '#submit-form', async function() {
            const is_form_valid = $("#cms_form").valid();

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));
                formData.append('delete_treatment_rows', delete_treatment_rows);

                const resp = await asyncPost('/cms/international-patient/edit','' ,formData);          
                
                if (resp.success) {
                    alert('International Patient updated successfully');
                    location.reload();
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
    </script>
