        </div>
        </div>`;

        $(document).on('click', '.add-row-treatment-1', function() {
            $('.customize_section-treatment_1').append(appendTreatmentHTML1);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove-row-treatment-1', function() {
            $(this).parents('.new-gallery').remove();
        });

        let delete_treatment_rows_1 = [];

        $(document).on('click', '.remove_treatment_row_1', function() {
            delete_treatment_rows_1.push($(this).data('id'));
            $(this).parents('.previous-treatment-row_1').remove();
        });

        $(document).ready(function() {
           

        });

const appendTreatmentHTML = `
        <div class="form-group row new-gallery">

            

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label"> Quotation
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <textarea class="summernote form-control" rows="4" id="comment" name="description2"></textarea>
                </div>
            </div>

            
       

        
            
        
        <div class="col-lg-2 mt--35">
            <button class="btn btn-danger remove-row-treatment" type="button"><i class="fa fa-minus"></i></button>
            <button class="btn btn-primary add-row-treatment" type="button"><i class="fa fa-plus"></i></button>
        </div>
        </div>`;

        $(document).on('click', '.add-row-treatment', function() {
            $('.customize_section-treatment').append(appendTreatmentHTML);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove-row-treatment', function() {
            $(this).parents('.new-gallery').remove();
        });

        let delete_treatment_rows = [];

        $(document).on('click', '.remove_treatment_row', function() {
            delete_treatment_rows.push($(this).data('id'));
            $(this).parents('.previous-treatment-row').remove();
        });
        
        $(document).ready(function() {
            $('.select-tag-slider').val(<%- JSON.stringify(data.slider ? data.slider._id : "")%>).trigger('change');          
        });

        $(document).on('click', '#submit-form', async function() {
            const is_form_valid = $("#cms_form").valid();

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));
                formData.append('delete_treatment_rows', delete_treatment_rows)
                formData.append('delete_treatment_rows_1', delete_treatment_rows_1)
                
                const resp = await asyncPost('/cms/careers/general','' ,formData);               
                
                if (resp.success) {
                    alert('Careers general updated successfully');
                    location.reload();
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
