    <script>
        
        $(document).ready(function() {
            // $('#enable').change(function() {
            //     if ($(this).is(":checked")) {
            //         document.getElementById("disable").checked = false;
            //     }
            // });

            // $('#disable').change(function() {
            //     if ($(this).is(":checked")) {
            //         document.getElementById("enable").checked = false;
            //     }
            // });


            $('.post-content-type').hide();
            $('.show-pdf').show();

            $(document).on('change', '.select-post-type', function() {

            let selected_type = $(this).val();

            $('.post-content-type').hide();

            if (selected_type == 'pdf') {
               $('.show-pdf').show();
            } else if (selected_type == 'link') {
                $('.show-link').show();
            }
            console.log('Selected type is:', $(this).val());
            });
        });
        $(document).on('click', '#submit-form', async function() {

            let hidden_elements = [];
            $('input:hidden').each(function() {
                if ($(this).attr('required')) {
                    hidden_elements.push($(this));
                    $(this).removeAttr('required');
                }
            });

            const is_form_valid = $("#cms_form").valid();

            for (let x of hidden_elements) {
                $(x).attr('required', true);
            }

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));

                const resp = await asyncPost('/cms/news/add','' ,formData);               
                
                if (resp.success) {
                    alert('News created successfully');
                    location.reload();
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
    </script>
