<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Somany CMS </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/static/images/favicon.ico">
    <%-  include('styles') -%>
</head>

<body>

    
    <%- include('preloader') -%>
    
    <div id="main-wrapper">

       <%- include('nav-header') -%>
       
       <%- include('header') -%>
       
       <%- include('sidebar') -%>

       <!--**********************************
            Content body start
        ***********************************-->
       <div class="content-body">
            <!-- row -->
            <div class="container-fluid">
                <div class="row">
                  
                    <div class="col-lg-12">
                        <div class="card">
                            <div class="card-header">
                                <h4 class="card-title">Create Gallery</h4>
                            </div>
                            <div class="card-body">
                                <div class="form-validation">
                                    <form class="form-valide" method="post" enctype="multipart/form-data" id="cms_form">
                                        <div class="row">
                                            <div class="col-xl-12">
                                                <div class="form-group row">
                                                    <label class="col-lg-2 col-form-label">Title
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="title" placeholder="Enter title...">
												        <input name='_csrf' value='<%=_csrf%>' id="csrf" style="display:none;">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-lg-2 col-form-label">Thumbnail Image <span
                                                            class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <div class="custom-file">
                                                            <input name="thumbnail_image_file" type="file" class="custom-file-input">
                                                            <label class="custom-file-label">Choose file</label>
                                                            <label>Recommended Size 250 * 250 </label>
                                                        </div>
                                                    </div>

                                                    <label class="col-lg-2 col-form-label" >Alt Tag<span
                                                        class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="thumbnail_alt" placeholder="Enter thumbnail alt...">
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-lg-2 col-form-label">URL <span
                                                            class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-10">
                                                        <div class="input-group mb-3">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">neeleshmisra.com/gallery/</span>
                                                            </div>
                                                            <input type="text" class="form-control" name="slug" required>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="form-group row">

                                                    <label class="col-lg-2 col-form-label">Meta Keywords
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="meta_keywords" placeholder="Enter meta keywords...">
                                                    </div>

                                                    <label class="col-lg-2 col-form-label">Meta Description
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <textarea name="meta_description" class="form-control" cols="30" rows="5"></textarea>
                                                    </div>
                                                    
                                                </div>

                                                <div class="form-group row">
                                                    <div class="col-lg-12 card-title">Gallery Images</div>
                                                </div>

                                                <div class="customize_section">
                                                    <div class="form-group row new-gallery">

                                                        <div class="col-lg-4">
                                                            <label class="col-lg-12 col-form-label">Title
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-12">
                                                                <input type="text" class="form-control" name="image_title" placeholder="Enter title...">
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="col-lg-4">
                                                            <label class="col-lg-12 col-form-label">Image
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-12 input-group mb-3">
                                                                <div class="custom-file">
                                                                    <input type="file" name="image_file" class="custom-file-input">
                                                                    <label class="custom-file-label">Choose Image</label>
                                                                    <span class="custom-file-labels">Recommended Size 250 * 250 </span>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-3">
                                                            <label class="col-lg-12 col-form-label">Alt Tag
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-12">
                                                                <input type="text" class="form-control" name="image_alt_tag" placeholder="Image alt tag...">
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-10">
                                                            <label class="col-lg-12 col-form-label">
                                                                Description
                                                            </label>
                                                            <div class="col-lg-12">
                                                                <textarea name="image_description" class="summernote form-control-textarea" placeholder="Page Description" rows="5"></textarea>
                                                            </div>
                                                        </div>

                                                        <div class="col-lg-2 mt--35">
                                                            <button class="btn btn-primary ml--40 add_row" type="button"><i class="fa fa-plus"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                                

                                            </div>
                                            <div class="col-xl-12">
                                                
                                                <div class="form-group row">
                                                    <div class="col-lg-8 ml-auto">
                                                        <button type="button" class="btn btn-primary" id="submit-form">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

        <%- include("footer") -%>
        
    </div>
    <%- include("scripts") -%>

    <script>
        const appendHTML = `<div class="form-group row new-gallery">

                                <div class="col-lg-4">
                                    <label class="col-lg-12 col-form-label">Title
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-12">
                                        <input type="text" class="form-control" name="image_title" placeholder="Enter title..." required>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <label class="col-lg-12 col-form-label">Image
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-12 input-group mb-3">
                                        <div class="custom-file">

                                            <input type="file" name="image_file" class="custom-file-input" required>
                                            <label class="custom-file-label">Choose Image</label>
                                            <span class="custom-file-labels">Recommended Size 250 * 250 </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <label class="col-lg-12 col-form-label">Alt Tag
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="col-lg-12">
                                        <input type="text" class="form-control" name="image_alt_tag" placeholder="Image alt tag..." required>
                                    </div>
                                </div>

                                <div class="col-lg-10">
                                    <label class="col-lg-12 col-form-label">
                                        Description
                                    </label>
                                    <div class="col-lg-12">
                                        <textarea name="image_description" class="summernote form-control-textarea" placeholder="Page Description" rows="5"></textarea>
                                    </div>
                                </div>

                                <div class="col-lg-2 mt--35">
                                    <button class="btn btn-danger remove_row" type="button"><i class="fa fa-minus"></i></button>
                                    <button class="btn btn-primary add_row" type="button"><i class="fa fa-plus"></i></button>
                                </div>
                                </div>`;


        $(document).on('click', '.add_row', function() {
            $('.customize_section').append(appendHTML);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove_row', function() {
            $(this).parents('.new-gallery').remove();
        });

        $(document).on('click', '#submit-form', async function() {
            const is_form_valid = $("#cms_form").valid();

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));
                const resp = await asyncPost('/cms/add-gallery','' ,formData);
                
                console.log(resp);
                
                if (resp.success) {
                    alert('Gallery created successfully');
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
    </script>
</body>

</html>