                                                    <label class="col-lg-2 col-form-label">Image 2
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <div class="custom-file">
                                                            <input name="image2" type="file" class="custom-file-input" required>
                                                            <label class="custom-file-label">Choose Image 2 file</label>
                                                            <!-- <label>Recommended Size 1600 * 400</label> -->
                                                        </div>
                                                    </div>
                                                    <label class="col-lg-2 col-form-label" >Image 2 Alt<span
                                                        class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="imageAlt2" placeholder="Enter image 2 alt..." required>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-lg-2 col-form-label">Logo Image
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <div class="custom-file">
                                                            <input name="logoImage" type="file" class="custom-file-input">
                                                            <label class="custom-file-label">Choose Image file</label>
                                                            <!-- <label>Recommended Size 1600 * 400</label> -->
                                                        </div>
                                                    </div>
                                                    <label class="col-lg-2 col-form-label" >Logo Image Alt<span
                                                        class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="logoImageAlt" placeholder="Enter image alt...">
                                                    </div>
                                                </div>

                                                <div class="form-group row"> 
                                                    <label class="col-lg-2 col-form-label">Slug URL
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="slug" placeholder="Enter title..." required>
                                                    </div>

                                                    <label class="col-lg-2 col-form-label">Slipshield
                                                        <span class="text-danger">*</span>
                                                    </label>
