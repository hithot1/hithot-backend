                                                            <button class="btn btn-primary ml--40 remove_treatment_row_1" data-id="<%= treatment._id%>" type="button"><i class="fa fa-trash"></i></button>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    
                                                    <div class="row">
                                                        <div class="col-8">
                                                        </div>
                                                        <div class="col-4 add-btns">
                                                            <button type="button" class="btn btn-primary add-row-treatment-1"> Add </button>
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="form-group row new-gallery">

                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Name
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <input type="text" class="form-control" name="overview_name" placeholder="Enter name..." required>
                                                                </div>
                                                            </div>

                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Designation
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <textarea class="form-control" rows="4" id="comment" name="overview_designation"></textarea>
                                                                </div>
                                                            </div>

                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Video
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <div class="custom-file">
                                                                        <input name="overview_video" type="file" class="custom-file-input" required>
                                                                        <label class="custom-file-label">Choose Image file</label>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                           
                                                
                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Thumbanil Image
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <div class="custom-file">
                                                                        <input name="overview_icon" type="file" class="custom-file-input" required>
                                                                        <label class="custom-file-label">Choose Image file</label>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                
                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label">Alt
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <input type="text" class="form-control" name="overview_iconalt" placeholder="Enter alt..." required>
                                                                </div>
                                                            </div>    
                                                
                                                        <div class="col-lg-2 mt--35">
                                                            
                                                            <button class="btn btn-primary add-row-treatment-1" type="button"><i class="fa fa-plus"></i></button>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-lg-2 col-form-label"> Somany Values Title
                                                        <span class="text-danger">*</span>
                                                    </label>
                                                    <div class="col-lg-4">
                                                        <input type="text" class="form-control" name="values_heading" placeholder="Enter heading..." value="<%= data.values_heading%>" required>
                                                    </div>
                                                </div>

                                                                                                                                                                  
                                                <div class="customize_section-treatment">
                                                    <% if (data.treatmentGroupData && data.treatmentGroupData.length > 0) {%>
                                                    <% for (let treatment of data.treatmentGroupData) { %>
                                                    <div class="form-group row new-gallery previous-treatment-row">

                                                       
                                                      
                                                        <div class="col-lg-4">
                                                            <label class="col-lg-12 col-form-label"> Values Title
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-12">
                                                                <%-treatment.values_title%>
                                                            </div>
                                                        </div>
                                                        

                                                        <div class="col-lg-4">
                                                            <label class="col-lg-12 col-form-label"> Description
                                                                <span class="text-danger">*</span>
                                                            </label>
                                                            <div class="col-lg-12">
                                                                <%-treatment.description2%>
                                                            </div>
                                                        </div>
                                                        
                                                        <div class="col-lg-2 mt--35">
                                                            <button class="btn btn-primary ml--40 remove_treatment_row" data-id="<%= treatment._id%>" type="button"><i class="fa fa-trash"></i></button>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                    
                                                    <div class="row">
                                                        <div class="col-8">
                                                        </div>
                                                        <div class="col-4 add-btns">
                                                            <button type="button" class="btn btn-primary add-row-treatment"> Add </button>
                                                        </div>
                                                    </div>
                                                    <% } else { %>
                                                        <div class="form-group row new-gallery">

                                                           
 
                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Values Title
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <textarea class="form-control" rows="4" id="comment" name="values_title"></textarea>
                                                                </div>
                                                            </div>

                                                            <div class="col-lg-4">
                                                                <label class="col-lg-12 col-form-label"> Description
                                                                    <span class="text-danger">*</span>
                                                                </label>
                                                                <div class="col-lg-12">
                                                                    <textarea class="summernote form-control" rows="4" id="comment" name="description2"></textarea>
                                                                </div>
                                                            </div>

                                                           
                                                
                                                     
                                                    
                                                
                                                        <div class="col-lg-2 mt--35">
                                                            
                                                            <button class="btn btn-primary add-row-treatment" type="button"><i class="fa fa-plus"></i></button>
                                                        </div>
                                                    </div>
                                                    <% } %>
                                                </div>                                        

                                                

                                            <div class="col-xl-12">                                                
                                                <div class="form-group row">
                                                    <div class="col-lg-2">
                                                    </div>
                                                    <div class="col-lg-10">
                                                        <button type="button" class="btn btn-primary" id="submit-form">Submit</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->

        <%- include("../footer") -%>
        
    </div>
    <%- include("../scripts") -%>

    <script>

const appendTreatmentHTML1 = `
        <div class="form-group row new-gallery">

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label"> Name
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="overview_name" placeholder="Enter name..." required>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label"> Designation
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <textarea class="form-control" rows="4" id="comment" name="overview_designation"></textarea>
                </div>
            </div>

            
            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Video
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <div class="custom-file">
                        <input name="overview_video" type="file" class="custom-file-input" required>
                        <label class="custom-file-label">Choose Video file</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Thumbnail Image
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <div class="custom-file">
                        <input name="overview_icon" type="file" class="custom-file-input" required>
                        <label class="custom-file-label">Choose Image file</label>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label">Alt
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <input type="text" class="form-control" name="overview_iconalt" placeholder="Enter alt..." required>
                </div>
            </div>
            
        
        <div class="col-lg-2 mt--35">
            <button class="btn btn-danger remove-row-treatment-1" type="button"><i class="fa fa-minus"></i></button>
            <button class="btn btn-primary add-row-treatment-1" type="button"><i class="fa fa-plus"></i></button>
        </div>
        </div>`;

        $(document).on('click', '.add-row-treatment-1', function() {
            $('.customize_section-treatment_1').append(appendTreatmentHTML1);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove-row-treatment-1', function() {
            $(this).parents('.new-gallery').remove();
        });

        let delete_treatment_rows_1 = [];

        $(document).on('click', '.remove_treatment_row_1', function() {
            delete_treatment_rows_1.push($(this).data('id'));
            $(this).parents('.previous-treatment-row_1').remove();
        });

        $(document).ready(function() {
           

        });

const appendTreatmentHTML = `
        <div class="form-group row new-gallery">

            

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label"> Values Title
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <textarea class="form-control" rows="4" id="comment" name="values_title"></textarea>
                </div>
            </div>

            <div class="col-lg-4">
                <label class="col-lg-12 col-form-label"> Description
                    <span class="text-danger">*</span>
                </label>
                <div class="col-lg-12">
                    <textarea class="summernote form-control" rows="4" id="comment" name="description2"></textarea>
                </div>
            </div>

            
       

        
            
        
        <div class="col-lg-2 mt--35">
            <button class="btn btn-danger remove-row-treatment" type="button"><i class="fa fa-minus"></i></button>
            <button class="btn btn-primary add-row-treatment" type="button"><i class="fa fa-plus"></i></button>
        </div>
        </div>`;

        $(document).on('click', '.add-row-treatment', function() {
            $('.customize_section-treatment').append(appendTreatmentHTML);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove-row-treatment', function() {
            $(this).parents('.new-gallery').remove();
        });

        let delete_treatment_rows = [];

        $(document).on('click', '.remove_treatment_row', function() {
            delete_treatment_rows.push($(this).data('id'));
            $(this).parents('.previous-treatment-row').remove();
        });
        
        $(document).ready(function() {
            $('.select-tag-slider').val(<%- JSON.stringify(data.slider ? data.slider._id : "")%>).trigger('change');          
        });

        $(document).on('click', '#submit-form', async function() {
            const is_form_valid = $("#cms_form").valid();

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));
                formData.append('delete_treatment_rows', delete_treatment_rows)
                formData.append('delete_treatment_rows_1', delete_treatment_rows_1)
                
                const resp = await asyncPost('/cms/aboutus/general','' ,formData);               
                
                if (resp.success) {
                    alert('About Us updated successfully');
                    location.reload();
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
    </script>
</body>

</html>