<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Somany CMS </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/static/images/favicon.ico">
    <%-  include('../styles') -%>
</head>

<body>

    
    <%- include('../preloader') -%>
    
    <div id="main-wrapper">

       <%- include('../nav-header') -%>
       
       <%- include('../header') -%>
       
       <%- include('../sidebar') -%>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-12 p-md-0">
                        <div class="welcome-text d-flex">
                            <h4>Manage Attribute Values</h4>
                            <a class="btn btn-primary position-absolute right--0" href="/cms/attribute/add/value">Add</a>
                        </div>
                    </div>
                    
                </div>
                <!-- row -->


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                           
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="display" style="min-width: 845px">
                                        <thead>
                                            <tr>
                                                <th>Value</th>
                                                <th>Category</th>
                                                <th>Date</th>
                                                

                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <% if (data && data.length) { 
                                                    for (let attributevalue of data) {    
                                            %>
                                            <tr>
                                                <td><a href="/cms/attribute-value-name/edit/<%=attributevalue._id%>"><%= attributevalue.value%></a></td>
                                                <td><% if(attributevalue.categorys){ for(let i=0; i < attributevalue.categorys.length; i++){%><%=attributevalue.categorys[i].categoryName%>, <% } } %></td>
                                                <td><%= moment(attributevalue.updated_at).format('DD/MM/YYYY') %></td>
                                                <td>
                                                    <a class="btn btn-primary" href="/cms/attribute-value-name/edit/<%=attributevalue._id%>">Edit</a>

                                                    <button class="btn btn-danger remove_attributevalue" data-id="<%= attributevalue._id%>">Delete</button>
                                                </td>
                                            </tr>

                                            <% } } else { %>
                                                <tr>
                                                    <td colspan="5">
                                                        No attribute values Added.
                                                    </td>
                                                </tr>
                                            <% } %>
                                          
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th>Value</th>
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <%- include("../footer") -%>
        
    </div>
    <%- include("../scripts") -%>
    
    <script>
        $(document).on('click', '.remove_attributevalue', async function() {

            let id = $(this).data('id');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel!'})
            .then(async (result) => {
                if (result.isConfirmed) {

                    const resp = await asyncDelete('/cms/attribute/remove/value', '/'+id);

                    if (resp && resp.success) {
                        Swal.fire({icon: "success", text: "Attribute Value deleted successfully"});
                        $(this).parents('tr').remove();
                        // window.location.href = window.location.href;
                    } else {
                        if (resp.message) {
                            alert(resp.message);
                        } else {
                            alert(resp.error);
                        }
                    }
                }
            });

        
        });
    </script>

</body>

</html>