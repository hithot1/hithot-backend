            //     console.log(speciality)
            //     const resp = await asyncGet("/cms/speciality/getSubSpecialityList/"+JSON.stringify(speciality),'',speciality);

            //     console.log(resp.data)
            //     if (resp.success) {

            //         let subSpeciality=""
            //         for (let curators of resp.data) { 
            //             subSpeciality='<option value="'+curators._id+'">'+curators.title+'</option>';
            //             $('#subSpeciality').append(subSpeciality)
            //         }

            //         $('.select-tag-sub-speciality').val(<%- JSON.stringify(data.doctorSubSpeciality)%>).trigger('change');
            //     } else {
            //         if (resp.message) {
            //             alert(resp.message);
            //         } else {
            //             alert(resp.error);
            //         }
            //     }
            // }

        });
        $(document).on('click', '#submit-form', async function() {
            const is_form_valid = $("#cms_form").valid();

            if (is_form_valid) {
                let formData = new FormData(document.querySelector('#cms_form'));

                const resp = await asyncPost('/cms/doctors/edit','' ,formData);               
                
                if (resp.success) {
                    alert('Doctor updated successfully');
                    location.reload();
                } else {
                    if (resp.message) {
                        alert(resp.message);
                    } else {
                        alert(resp.error);
                    }
                }
            }

            
        });

        
    </script>
</body>

</html>