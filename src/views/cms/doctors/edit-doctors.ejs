                <div class="col-lg-12">
                    <textarea class="form-control summernote" rows="4" id="comment" name="aboutDescription" required></textarea>
                </div>
            </div>

        <div class="col-lg-2 mt--35">
            <button class="btn btn-danger remove_row" type="button"><i class="fa fa-minus"></i></button>
            <button class="btn btn-primary add_row" type="button"><i class="fa fa-plus"></i></button>
        </div>
        </div>`;

        $(document).on('click', '.add_row', function() {
            $('.customize_section').append(appendHTML);
            $('.summernote').summernote({
                height: 150,
                minHeight: null,
                maxHeight: null,
                focus: !1
            });
        });

        $(document).on('click', '.remove_row', function() {
            $(this).parents('.new-gallery').remove();
        });
        
        $(document).ready(function() {
            
            $('.select-tag-location').val(<%- JSON.stringify(data.doctorLocation ? data.doctorLocation : "")%>).trigger('change');
            $('.select-tag-department').val(<%- JSON.stringify(data.doctorDepartment)%>).trigger('change');
            $('.select-tag-speciality').val(<%- JSON.stringify(data.doctorSpeciality)%>).trigger('change');
            $('.select-tag-hospitalnames').val(<%- JSON.stringify(data.hospitalNames)%>).trigger('change');
            $('.select-tag-doctorRating').val(<%- JSON.stringify(data.doctorRating ? data.doctorRating : "")%>).trigger('change');
            
            // getSubSpecialityList(<%- JSON.stringify(data.doctorSpeciality)%>)

            let checkbox = <%=data.checked%> 
            if (checkbox) {
                document.getElementById("enable").checked = true;
            } else {
                document.getElementById("disable").checked = true;
            }

            $('#enable').change(function() {
                if ($(this).is(":checked")) {
                    document.getElementById("disable").checked = false;
                }
            });

            $('#disable').change(function() {
                if ($(this).is(":checked")) {
                    document.getElementById("enable").checked = false;
                }
            });

