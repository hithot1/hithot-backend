<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Somany CMS </title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/static/images/favicon.png">
    <%-  include('../styles') -%>
</head>

<body>

    
    <%- include('../preloader') -%>
    
    <div id="main-wrapper">

       <%- include('../nav-header') -%>
       
       <%- include('../header') -%>
       
       <%- include('../sidebar') -%>

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">
            <div class="container-fluid">
                <div class="row page-titles mx-0">
                    <div class="col-sm-12 p-md-0">
                        <div class="welcome-text d-flex">
                            <h4>Manage Career integrated Learning</h4>
                            <a class="btn btn-primary position-absolute right--0" href="/cms/integrated/add">Create</a>
                        </div>
                    </div>
                    
                </div>
                <!-- row -->


                <div class="row">
                    <div class="col-12">
                        <div class="card">
                           
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table id="example" class="display" style="min-width: 845px">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Title</th>
                                                
                                                <th>Alt</th>
                                               
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            <% if (data && data.length) { 
                                                    for (let integrated of data) {    
                                            %>
                                            <tr>
                                                <td><img class="logo-abbr small_image" src="<%= integrated.bg_image_url%>" alt="<%= integrated.bg_alt%>"></td>
                                                <td><%- integrated.heading%></td>
                                               
                                                <td><%= integrated.bg_alt%></td>
                                                
                                                <td><%= moment(integrated.updated_at).format('DD/MM/YYYY') %></td>
                                                <td>
                                                    <a class="btn btn-primary" href="/cms/integrated/edit/<%= integrated._id%>">Edit</a>
                                                    <button class="btn btn-danger remove_book" data-id="<%= integrated._id%>">Delete</button>
                                                </td>
                                            </tr>

                                            <% } } else { %>
                                                <tr>
                                                    <td colspan="5">
                                                       No integrated Leaning
                                                    </td>
                                                </tr>
                                            <% } %>
                                          
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <th></th>
                                                <th>Title</th>
                                                
                                                <th>Alt</th>
                                              
                                                <th>Date</th>
                                                <th>Action</th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
        <!--**********************************
            Content body end
        ***********************************-->


        <%- include("../footer") -%>
        
    </div>
    <%- include("../scripts") -%>
    

    <script>
        $(document).on('click', '.remove_book', async function() {

            let id = $(this).data('id');
            var  rowToDelete = $(this).closest('tr');

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'No, cancel!'})
            .then(async (result) => {
                if (result.isConfirmed) {

                    const resp = await asyncDelete('/cms/integrated/remove', '/'+id);

                    if (resp && resp.success) {
                        Swal.fire({icon: "success", text: "Integrated Learning deleted successfully"});
                        var table = $('#example').DataTable();
                            table.row(rowToDelete).remove().draw();
                            rowToDelete = ''; 
                        //$(this).parents('tr').remove();
                        // window.location.href = window.location.href;
                    } else {
                        if (resp.message) {
                            alert(resp.message);
                        } else {
                            alert(resp.error);
                        }
                    }
                }
            });

        
        });
    </script>

</body>

</html>